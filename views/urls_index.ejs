<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp</title>
  </head>
  <body>
    <header>
      <% include ./partials/_header %>
    </header>
    <ul>
      <% urls.forEach(function(url) { %>
        <li><%= url[0] + " ---> " + url[1]  %>
        <a href="/urls/<%= url[0] %>">Edit</a>
        <form method="POST" action="/urls/<%= url[0] %>/delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
    <a href="/urls/new">Shortening a link</a>
    <ul>
  </body>
</html>